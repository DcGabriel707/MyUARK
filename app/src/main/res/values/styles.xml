<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OuterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SimpleCardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SimpleInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CardItemInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="ListCardView" parent="SimpleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TileCardView" parent="ListCardView">
        <item name="android:layout_height">140dp</item>
        <item name="cardElevation">14dp</item>
        <item name="android:stateListAnimator">@animator/card_clicked</item>
    </style>

    <style name="WidgetCardView" parent="ListCardView">
        <item name="cardElevation">14dp</item>

        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_height">140dp</item>
    </style>


    <style name="ImageViewInCard">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="BgImageView">
        <item name="tintMode">multiply</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TileIconImageView" parent="ImageViewInCard">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FeedsImageView" parent="ImageViewInCard">
        <item name="shapeAppearanceOverlay">@style/RoundCorners</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>


    <style name="LatoFont">
        <item name="fontFamily">@font/lato</item>
    </style>


    <style name="HeaderTextView" parent="LatoFont">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="LatoFont">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TileHeaderTextView" parent="HeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardHeaderTextView" parent="HeaderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TileTitleTextView" parent="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="InfoPageTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="InfoPageHeaderTextView" parent="InfoPageTextView">
    </style>

    <style name="InfoPageSecondaryTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="InfoPageSmallTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="InfoPageRecyclerView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/top_margin_inner_content_info_page</item>
        <item name="android:paddingLeft">@dimen/left_margin_inner_content_info_page</item>
        <item name="android:paddingRight">@dimen/left_margin_inner_content_info_page</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="InfoPageCardButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_inner_content_info_page</item>
        <item name="android:layout_marginRight">@dimen/left_margin_inner_content_info_page</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:stateListAnimator">@animator/card_clicked</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Frequently Asked Questions</item>
    </style>

    <style name="cardSecondaryText" parent="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


    <style name="MyRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">81dp</item>
        <item name="android:paddingBottom">81dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:layout_margin">12dp</item>
        <item name="tint">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="EventsFloatingActionButton" parent="FloatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red</item>
        <item name="tint">@color/red</item>
        <item name="iconTint">@color/red</item>
    </style>

    <style name="FABGroupLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="layout_anchorGravity">top|end</item>
    </style>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="RoundCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundButton" parent="SimpleCardView">
        <item name="cardBackgroundColor">@color/darkRed</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:stateListAnimator">@animator/card_clicked</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="CardButtonInnerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
    </style>


    <style name="DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@color/red</item>
        <!--Alpha can be added optionally to achieve nice color blend-->
        <item name="android:alpha">0.3</item>
    </style>

    <style name="TopRoundCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">6dp</item>
        <item name="cornerSizeBottomRight">6dp</item>
    </style>
    <style name="MiddleCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="BottomRoundCard" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="LeftRoundCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">26dp</item>
        <item name="cornerSizeTopRight">2dp</item>
        <item name="cornerSizeBottomLeft">26dp</item>
        <item name="cornerSizeBottomRight">2dp</item>
    </style>

    <style name="RightRoundCard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">2dp</item>
        <item name="cornerSizeTopRight">26dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
        <item name="cornerSizeBottomRight">26dp</item>
    </style>


</resources>