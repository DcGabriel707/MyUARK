<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LatoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="SimpleCardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">21dp</item>
    </style>

    <style name="TileInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TileCardView" parent="SimpleCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation">14dp</item>
    </style>

    <style name="TileIconImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TileTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Theme.MyApplication.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>