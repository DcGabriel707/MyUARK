<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:stateListAnimator="@animator/card_clicked"
    style="@style/TileCardView">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/TileInnerLayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tile_image"
            style="@style/TileIconImageView"
            android:src="@drawable/ic_baseline_directions_bus_24" />

        <TextView
            android:id="@+id/title_textview"
            style="@style/TileTitleTextView"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>