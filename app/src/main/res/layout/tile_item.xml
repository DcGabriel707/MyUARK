<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListCardView"
    app:cardElevation="14dp"
    android:layout_height="140dp"
    android:stateListAnimator="@animator/card_clicked">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/SimpleInnerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tile_image"
            style="@style/TileIconImageView"
            android:layout_weight="4"
            android:padding="8dp"
            android:src="@drawable/bus_alt"
            android:visibility="visible" />

        <TextView
            android:id="@+id/header_textview"
            style="@style/TileHeaderTextView"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title_textview"
            style="@style/TileTitleTextView"
            android:layout_weight="1"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>